{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="container">
            {% for program in programs %}
                <div class="media">
                    <div class="media-body">
                        <h1 class="mt-0">{{ program.title }}</h1>
                        <p>{{ program.summary }}</p>
                        <p> Id de la série : {{ program.id }}</p>
                        <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
                    </div>
                </div>
            {% else %}
                <h1>Aucune série trouvée</h1>
            {% endfor %}

            <a href="{{ path('category_index') }}">
                Retour à la liste des categories
            </a>
        </div>
    </div>

{% endblock %}