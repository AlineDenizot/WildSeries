{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container">
            <h1>Comment index</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Comment</th>
                    <th>Rate</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td>{{ comment.comment }}</td>
                        <td>{{ comment.rate }}</td>
                        <td>
                            {% if is_granted("ROLE_CONTRIBUTOR") %}
                                <a href="{{ path('comment_edit', {'id': comment.id}) }}">Ã‰diter</a>
                            {%endif%}
                            {% if is_granted("ROLE_ADMIN") or app.user == comment.author %}
                                <a href="{{ path('comment_delete', {'id': comment.id}) }}">Supprimer</a>
                            {%endif%}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('program_index') }}">Retour aux programmes</a>
        </div>
    </div>

{% endblock %}
